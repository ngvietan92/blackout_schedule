<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSpinner"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/spinner_triangle"
        android:drawablePadding="@dimen/spinner_toolbar_paddingDrawable"
        android:paddingLeft="@dimen/spinner_toolbar_paddingLeft"
        android:paddingRight="@dimen/spinner_toolbar_paddingRight"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center_vertical"/>

</LinearLayout>